{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug",
            "type": "shell",
            "command": "/Program Files (x86)/Microsoft Visual Studio/2017/Community/Common7/IDE/devenv",
            "args": [
                "${workspaceFolder}/HelloOpenGL-WinStore10.sln",
                "/runexit"
            ],
            "group": "test",
            "problemMatcher": [
                "$msCompile"
            ]
            
        },
        {
            "label": "deploy",
            "type": "shell",
            "command": "/Program Files (x86)/Microsoft Visual Studio/2017/Community/Common7/IDE/devenv",
            "args": [
                "/deploy",
                "debug",
                "${workspaceFolder}/HelloOpenGL-WinStore10.sln"
            ],
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "/Program Files (x86)/Microsoft Visual Studio/2017/Community/Common7/IDE/devenv",
            "args": [
                "${workspaceFolder}/HelloOpenGL-WinStore10.sln",
                "/clean"
            ],
            "group": "build"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "/Program Files (x86)/Microsoft Visual Studio/2017/Community/Common7/IDE/devenv",
            "args": [
                "${workspaceFolder}/HelloOpenGL-WinStore10.sln",
                "/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
        }
    ]
}